<h1>List of all Todos</h1>

<p>
	<%= link_to "Create a Todo", new_todo_path %>
</p>

<table id="todo_table">
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>Description</th>
	</tr>
	<% @todos.each do |todo| %>
		<tr>
			<td><%= todo.id %></td>
			<td><%= todo.name %></td>
			<td><%= todo.description %></td>
			<td><%= link_to "Edit", edit_todo_path(todo) %></td>
			<td><%= link_to "Show", todo_path(todo) %></td>
		</tr>
	<% end %>
</table>
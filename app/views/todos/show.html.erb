<h1>Showing a Todo</h1>

<p>
	name: <%= @todo.name %>
</p>
<p>
	description: <%= @todo.description %>
</p>

<%= link_to 'Edit this Todo', edit_todo_path(@todo) %><br />
<%= link_to 'Create a New Todo', new_todo_path %><br />
<%= link_to 'Delete', todo_path(@todo), method: :delete, data: {confirm: "Are you sure you want to delete this todo?"} %><br />